<% content_for :main do %>
    <h1>Login</h1>

    <% if flash[:notice] %>
    	<div class="notice">
    		<%= flash[:notice] %>
    	</div>
    <% end %>

    <%= form_tag sessions_path do %>

    	<p>
        	<%= email_field_tag :email, params[:email], :placeholder => "Email" %>
      	</p>
     
      	<p>
        	<%= password_field_tag :password, '', :placeholder => "Password" %>
      	</p>

      	<p>
        	<%= submit_tag 'Login' %>
      	</p>

    <% end %>

<% end %>