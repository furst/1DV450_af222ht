    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Toerh documentation</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <%= stylesheet_link_tag "normalize", "style" %>

    </head>
    <body>

        <div class="header-band">
            <div class="header">
                <div class="logo">Toerh documentaion</div>
            
                <div class="nav">
                    <ul>
                        <li><%= link_to 'Documentation', dev_docs_path() %></li>
                        <% if current_admin.present? %>
                            <li><%= link_to 'Users', dev_userslist_path() %></li>
                        <% end %>
                        <% if current_user.present? %>
                            <li><%= link_to 'Dashboard', dev_account_path() %></li>
                            <li><%= link_to 'Logout', dev_logout_path() %></li>
                        <% else %>
                            <li><%= link_to 'Login', dev_login_path() %></li>
                            <li><%= link_to 'Register', dev_register_path() %></li>
                        <% end %>
                    </ul>
                </div>

            </div>
        </div>

        <div class="container">
            <div class="sidebar">
                <ul>
                    <li><%= link_to 'Getting started', dev_start_path() %></li>
                    <li><%= link_to 'Resources', dev_resources_path() %></li>
                    <li><%= link_to 'Users', dev_users_path() %></li>
                    <li><%= link_to 'Tags', dev_tags_path() %></li>
                    <li><%= link_to 'Licenses', dev_licenses_path() %></li>
                    <li><%= link_to 'Resource types', dev_resourcetypes_path() %></li>
                    <li><%= link_to 'Errors', dev_errors_path() %></li>
                </ul>
            </div>

            <div class="main">

                <%= yield :main %>

            </div>
            
        </div>

    </body>
</html>